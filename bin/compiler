#!/usr/bin/env php
<?php

declare(strict_types=1);

namespace webignition\BasilRunner\Bin;

if (\Phar::running() !== '') {
    require 'phar://compiler.phar/vendor/autoload.php';;
} else {
    require 'vendor/autoload.php';
}

use webignition\BasilCliCompiler\Services\ApplicationFactory;

$projectRootPath = realpath(__DIR__ . '/..');
ApplicationFactory::create($projectRootPath)->run();
