{
    "name": "webignition/basil-cli-compiler",
    "description": "CLI compiler to generate executable tests from basil source",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-cli-compiler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCliCompiler\\": "src",
            "webignition\\BasilCliCompiler\\Bin\\": "bin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCliCompiler\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-ecs": "./vendor/bin/ecs check src tests --ansi --no-progress-bar --config ecs.php",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-ecs",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test-unit": "./vendor/bin/phpunit --colors=always tests/Unit",
        "test-functional": "./vendor/bin/phpunit --colors=always tests/Functional",
        "test-integration-bin": "./vendor/bin/phpunit --colors=always tests/Integration/Bin",
        "test": [
            "@test-unit",
            "@test-functional",
            "@test-integration-bin"
        ],
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ],
        "phar-dump-autoload": "@composer dump-autoload --classmap-authoritative --no-dev --no-scripts --optimize",
        "phar-compile": "@php -dphar.readonly=0 bin/compile.php",
        "phar-build": [
            "@composer install --no-dev --prefer-dist",
            "rm -f build/compiler.phar",
            "@phar-dump-autoload",
            "@phar-compile",
            "rm -f compiler",
            "cp build/compiler.phar compiler",
            "chmod +x ./compiler",
            "@composer install"
        ],
        "phar-test": [
            "@composer dump-autoload",
            "./vendor/bin/phpunit --colors=always tests/Integration/Phar"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/console": "^5.1",
        "symfony/yaml": "^5.1",
        "webignition/base-basil-test-case": "^0.40.0",
        "webignition/basil-compilable-source": "^0.66.0",
        "webignition/basil-compiler-models": "^0.14.0",
        "webignition/basil-loader": "^0.31.0",
        "webignition/basil-models": "^0.57",
        "webignition/php-basil-compilable-source-factory": "^0.63.0",
        "webignition/single-command-application-factory": "^0.1.0",
        "webignition/single-command-application-phar-builder": "^0.2.0",
        "webignition/stubble": "^0.13.0",
        "webignition/symfony-console-typed-input": "^0.5.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "php-mock/php-mock": "^2.2",
        "php-mock/php-mock-mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.57",
        "phpstan/phpstan-mockery": "^0.12.7",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/process": "^5.1",
        "symplify/easy-coding-standard": "^8.3",
        "webignition/basil-data-validator": ">=0.14,<1",
        "webignition/basil-parser": ">=0.25,<1",
        "webignition/object-reflector": ">=0.2,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1"
    },
    "bin": [
        "bin/compiler"
    ],
    "config": {
        "sort-packages": true
    }
}
